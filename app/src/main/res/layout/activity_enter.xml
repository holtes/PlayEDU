<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterActivity"
    android:background="@color/background">

    <ImageButton
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:background="@null"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"/>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="348dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="260dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:text="@string/enter_title"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="24sp" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rec_rounded_white"
            android:hint="@string/FIO_hint"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rec_rounded_white"
            android:hint="@string/group_hint"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rec_rounded_white"
            android:hint="@string/pass_hint"
            android:paddingLeft="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@drawable/enter_btn_false" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="380dp"
        android:layout_height="205dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cat_remind_pass" />
</androidx.constraintlayout.widget.ConstraintLayout>